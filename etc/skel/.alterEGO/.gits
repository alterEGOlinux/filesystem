[ -f ${HOME}/.alterEGO/bash-ael/message.bash ]                                \
&& . ${HOME}/.alterEGO/bash-ael/message.bash

## [-- lazygit --]

lazygit() {
    ## The variable git_repositories is defined in /.alterego/.extrarc
    for repo in "${git_repositories[@]}"; do
        message action "Updating $repo"
        cd "$repo"
        git pull                                                              \
        && git add .                                                          \
        && git commit -m "Updated using lazygit..."                           \
        && git push
        cd ${HOME}
    done
}

