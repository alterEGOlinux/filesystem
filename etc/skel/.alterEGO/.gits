[ -f ${HOME}/.alterEGO/bash-ael/message.bash ]                                \
&& . ${HOME}/.alterEGO/bash-ael/message.bash

## [-- lazygit --]

lazygit() {
    repositories=(
                  "${HOME}/main/ael-filesystem"
                  "${HOME}/main/collection"
                  "${HOME}/main/droidnotes"
                  "${HOME}/main/NeuronRIS"
                  "${HOME}/main/python-ael"
                  "${HOME}/main/ramdapp"
                  "${HOME}/main/stuff"
                  "${HOME}/scripts"
                  "${HOME}/radimed"
                 )

    for repo in "${repositories[@]}"; do
        message action "Updating $repo"
        cd "$repo"
        git pull                                                              \
        && git add .                                                          \
        && git commit -m "Updated using lazygit..."                           \
        && git push
        cd ${HOME}
    done
}

