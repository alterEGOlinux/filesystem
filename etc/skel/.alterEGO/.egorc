## [ COLORS ] -------------------------------------------------------------- ##

  export TERM="xterm-256color"

  export COLOR_BLUE="\033[34m"
  export COLOR_BOLD="\033[1m"
  export COLOR_GREEN="\033[32m"
  export COLOR_RED="\033[31m"
  export COLOR_RESET="\033[0m"

## [ ALIAS ] --------------------------------------------------------------- ##

